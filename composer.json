{
  "name": "bradsearch/search-sync-sdk",
  "description": "PHP SDK for Brad Search synchronization API",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "search",
    "sync",
    "opensearch",
    "elasticsearch",
    "api"
  ],
  "authors": [
    {
      "name": "Brad Search Team"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-bcmath": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "BradSearch\\SyncSdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BradSearch\\SyncSdk\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
